---
import BaseLayout from '../layouts/BaseLayout.astro';
import Projects from '../components/Projects.astro';

---

<BaseLayout title="Projects - antolab.net">
    <section class="hero">
        <Projects />
    </section>
</BaseLayout>

<style>
    .projects {
        padding: 1rem;  /* Reduce from 2rem */
        background-color: var(--background-light);
        width: 100%;
        box-sizing: border-box;
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Reduce from 280px */
        gap: 1rem; /* Reduce from 1.5rem */
    }

    @media (max-width: 768px) {
        .projects {
            padding: 0.5rem;
        }
        
        .project-card {
            padding: 1rem;  /* Reduce from 1.25rem */
        }
        
        .project-description {
            font-size: 0.875rem; /* Smaller font on mobile */
        }
    }
</style>
