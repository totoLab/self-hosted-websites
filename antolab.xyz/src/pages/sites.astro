---
import BaseLayout from '../layouts/BaseLayout.astro';

type Site = {
  subdomain: string,
  icon: string
};

const icons = await fetch('https://antolab.xyz/icons.json')
  .then(response => response.json())
  .catch(() => {});

const subdomains = await fetch('https://antolab.xyz/data.json')
  .then(response => response.json())
  .catch(() => []);

const sites: Site[] = subdomains.map((element: string) => {
  const iconUrl = icons[element] || ''; // Safely access the icon URL
  return {
    subdomain: element,
    icon: iconUrl,
  };
});

---
<BaseLayout title="Sites - antolab.xyz">
    <h2>My Services</h2>
    <ul id="sites">
        {sites
          .filter((site: Site) => site.subdomain !== '@')
          .sort((a: Site, b: Site) => a.subdomain.localeCompare(b.subdomain))
          .map((site: Site) => (
            <li>
                <a href={`https://${site.subdomain}.antolab.xyz`}>
                {site.icon && ( // Render <img> tag only if site.icon is not empty
                  <img 
                    src={site.icon} 
                    alt={`${site.subdomain} icon`} 
                    class="site-icon" 
                  />
                )}
                {`${site.subdomain}.antolab.xyz`}
              </a>
            </li>
          ))
        }
    </ul>
</BaseLayout>

<style is:global>
  #sites {
    list-style-type: none;
    padding: 0;
    margin: 1.5rem 0;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  #sites li {
    background-color: var(--background-white);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-default);
    box-shadow: 0 1px 3px var(--header-shadow);
    transition: var(--transition-default);
    display: flex;
    align-items: center;
    padding: 1rem;
  }

  #sites li:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 6px var(--header-shadow);
  }

  #sites li a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--text-primary);
    font-weight: 500;
    font-size: 0.875rem;
    transition: color 0.3s ease;
  }

  #sites li a:hover {
    color: var(--primary-color);
  }

  .site-icon {
    width: 24px;
    height: 24px;
    border-radius: var(--radius-default);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    transition: var(--transition-default);
  }

  .site-icon:hover {
    transform: scale(1.1);
  }

  h2 {
    color: var(--text-primary);
    font-size: 1.5rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  @media (max-width: 768px) {
    #sites {
      gap: 0.75rem;
    }

    #sites li {
      padding: 0.75rem;
    }

    #sites li a {
      font-size: 0.8125rem;
    }

    .site-icon {
      width: 20px;
      height: 20px;
    }
  }

  @media (max-width: 640px) {
    #sites li {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    #sites li a {
      flex-direction: column;
      gap: 0.25rem;
    }

    .site-icon {
      margin-bottom: 0.5rem;
    }
  }
</style>
