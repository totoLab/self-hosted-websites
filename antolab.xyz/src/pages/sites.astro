---
import BaseLayout from '../layouts/BaseLayout.astro';

type Site = string;

const sites: Site[] = await fetch('https://antolab.xyz/data.json')
    .then(response => response.json())
    .catch(() => []);
---
<BaseLayout title="Sites - antolab.xyz">
    <h2>My Services</h2>
    <ul id="sites">
        {sites
            .sort()
            .filter((site: Site) => site !== '@')
            .map((site: Site) => (
                <li>
                    <a href={`https://${site}.antolab.xyz`}>
                        {`${site}.antolab.xyz`}
                    </a>
                </li>
            ))
        }
    </ul>
</BaseLayout>

<style is:global>
  #sites {
    list-style-type: none;
    padding: 0;
    margin: 1.5rem 0;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  #sites li {
    background-color: var(--background-white);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-default);
    box-shadow: 0 1px 3px var(--header-shadow);
    transition: var(--transition-default);
  }

  #sites li:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 6px var(--header-shadow);
  }

  #sites li a {
    display: block;
    padding: 1rem;
    text-decoration: none;
    color: var(--text-primary);
    font-weight: 500;
    text-align: center;
    font-size: 0.875rem;
    transition: color 0.3s ease;
  }

  #sites li a:hover {
    color: var(--primary-color);
  }

  h2 {
    color: var(--text-primary);
    font-size: 1.5rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  @media (max-width: 768px) {
    #sites {
      gap: 0.75rem;
    }

    #sites li a {
      font-size: 0.8125rem;
    }
  }

  @media (max-width: 640px) {
    #sites li a {
      padding: 0.75rem;
    }
  }
</style>
