---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <header class="header">
      <nav class="nav-container">
        <div class="logo">
          <a href="/" class="logo-link">
            <span class="logo-text">antolab</span>
            <span class="logo-dot">.</span>
            <span class="logo-extension">xyz</span>
          </a>
        </div>
        
        <div class="nav-links">
          <a href="/" class="nav-link">Home</a>
          <a href="/project" class="nav-link">Projects</a>
          <a href="/sites" class="nav-link">Homelab</a>
          <a href="https://www.linkedin.com/in/antoniolabate/" 
             class="nav-link" 
             target="_blank" 
             rel="noopener noreferrer">
            Linkedin
          </a>
          <a href="https://github.com/totoLab" 
          class="nav-link github-link" 
          target="_blank" 
          rel="noopener noreferrer">
          GitHub
        </a>
        <a href="/contact" class="nav-link">Contact</a>
        </div>
      </nav>
    </header>

    <main class="main-content">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    /* Colors */
    --primary-color: #2563eb;
    --secondary-color: #1e40af;
    --text-primary: #1f2937;
    --text-secondary: #4b5563;
    --background-light: #f9fafb;
    --background-white: #ffffff;
    --border-color: #e5e7eb;
    --header-bg: #ffffff;
    --header-shadow: rgba(0, 0, 0, 0.05);
    
    /* Typography */
    --font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    
    /* Other */
    --radius-default: 0.5rem;
    --transition-default: all 0.2s ease-in-out;
    --max-width: 1280px;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: var(--font-family);
    color: var(--text-primary);
    background-color: var(--background-light);
    line-height: 1.5;
  }
</style>

<style>
  .header {
    background-color: var(--header-bg);
    border-bottom: 1px solid var(--border-color);
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 1px 2px var(--header-shadow);
  }

  .nav-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo-link {
    text-decoration: none;
    font-size: 1.5rem;
    font-weight: 700;
    display: flex;
    align-items: center;
  }

  .logo-text {
    color: var(--text-primary);
  }

  .logo-dot {
    color: var(--primary-color);
  }

  .logo-extension {
    color: var(--text-secondary);
    font-weight: 500;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-link {
    text-decoration: none;
    color: var(--text-secondary);
    font-size: 0.875rem;
    font-weight: 500;
    padding: 0.5rem;
    border-radius: var(--radius-default);
    transition: var(--transition-default);
  }

  .nav-link:hover {
    color: var(--primary-color);
    background-color: var(--background-light);
  }

  .github-link {
    color: var(--text-primary);
    font-weight: 600;
  }

  .main-content {
    max-width: var(--max-width);
    margin: 2rem auto;
    padding: 0 1rem;
  }

  @media (max-width: 768px) {
    .nav-links {
      gap: 1rem;
    }

    .nav-link {
      padding: 0.25rem;
    }
  }

  @media (max-width: 640px) {
    .nav-container {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-links {
      width: 100%;
      justify-content: space-between;
    }

    .nav-link {
      font-size: 0.8125rem;
    }
  }
</style>